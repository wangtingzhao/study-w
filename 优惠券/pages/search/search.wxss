.search_input_box{
    height: 40px;
    line-height: 40px;
    position: relative;
    background: #fff;   
    padding: 0 10px;
    overflow: hidden;
    border-bottom: 1px solid #f4f4f4;
}
.search_input{
    width: 78%;
    padding-left:10px;
    height: 30px;
    line-height: 30px;
    color: #939395;
    background: #f5f6f8;
    border-radius: 2.5px;
    font-size: 12px;
    margin-top:5px;
}
